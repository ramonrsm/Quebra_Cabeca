<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".View.SliderActivity">

    <Button
        android:id="@+id/button_novoJogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/button_novo_jogo" />

    <Button
        android:id="@+id/button_Sair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="@string/button_sair"
        tools:ignore="RelativeOverlap" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerInParent="true">

        <TableRow
            android:id="@+id/tr1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:tag="tr1">

            <LinearLayout
                android:id="@+id/recipiente0"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_quebra_cabeca"
                android:orientation="vertical"
                android:tag="0">

                <ImageView
                    android:id="@+id/peca0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/contentDescription_default"
                    android:tag="0"
                    app:srcCompat="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recipiente1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_quebra_cabeca"
                android:orientation="vertical"
                android:tag="1">

                <ImageView
                    android:id="@+id/peca1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/contentDescription_default"
                    android:tag="1"
                    app:srcCompat="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recipiente2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_quebra_cabeca"
                android:orientation="vertical"
                android:tag="2">

                <ImageView
                    android:id="@+id/peca2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/contentDescription_default"
                    android:tag="2"
                    app:srcCompat="@mipmap/ic_launcher" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tr2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:tag="tr2">

            <LinearLayout
                android:id="@+id/recipiente3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_quebra_cabeca"
                android:orientation="vertical"
                android:tag="3">

                <ImageView
                    android:id="@+id/peca3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/contentDescription_default"
                    android:tag="3"
                    app:srcCompat="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recipiente4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_quebra_cabeca"
                android:orientation="vertical"
                android:tag="4">

                <ImageView
                    android:id="@+id/peca4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/contentDescription_default"
                    android:tag="4"
                    app:srcCompat="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recipiente5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_quebra_cabeca"
                android:tag="5">

                <ImageView
                    android:id="@+id/peca5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/contentDescription_default"
                    android:tag="5"
                    app:srcCompat="@mipmap/ic_launcher" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tr3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:tag="tr3">

            <LinearLayout
                android:id="@+id/recipiente6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_quebra_cabeca"
                android:orientation="vertical"
                android:tag="6">

                <ImageView
                    android:id="@+id/peca6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/contentDescription_default"
                    android:tag="6"
                    app:srcCompat="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recipiente7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_quebra_cabeca"
                android:orientation="vertical"
                android:tag="7">

                <ImageView
                    android:id="@+id/peca7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/contentDescription_default"
                    android:tag="7"
                    app:srcCompat="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recipiente8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_quebra_cabeca"
                android:orientation="vertical"
                android:tag="8">

                <ImageView
                    android:id="@+id/peca8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/contentDescription_default"
                    android:tag="8"
                    app:srcCompat="@mipmap/ic_launcher" />
            </LinearLayout>
        </TableRow>

    </TableLayout>

</RelativeLayout>